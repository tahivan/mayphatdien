<!--                            <span><span>-->
<!--                                    --><?php //echo $this->__('Add to Cart') ?>
<!--                            </span></span>-->
<!--                        </button>-->
					<?php else:?>
						 <p class="availability"><span class="out-of-stock"><?php echo $this->__('Out of stock') ?></span></p>
					<?php endif;?>
					</div>
					<ul class="add-to-links">
                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                            <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></li>
                        <?php endif; ?>
                        <?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
                            <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a></li>
                        <?php endif; ?>
                        <?php if($_downloadFileUrl=$_product->getPdfDownloadUrl()): ?>
                            <li><span class="separator">|</span> <a href="<?php echo $_downloadFileUrl ?>" rel="nofollow" class="link-print"><?php echo $this->__('Download file') ?></a></li>
                        <?php endif; ?>
                    </ul>
				</div>
            </li>
        <?php if ($i%$_columnCount==0 && $i!=$_collectionSize): ?>
        </ol>
        <?php endif ?>
        <?php endforeach ?>
        <?php for($i;$i%$_columnCount!=0;$i++): ?>
              <li class="empty">&nbsp;</li>
        <?php endfor ?>
        <?php if ($i%$_columnCount==0): ?>
        </ol>
        <?php endif ?>
		<div class="clear_both"><span> </span></div>
    </div>
	
	<script type="text/javascript">decorateGeneric($$('.grid-row'), ['last', 'odd', 'even']);</script>
    <?php endif; ?>
    <?php echo $this->getToolbarHtml() ?>
</div>
<?php endif; ?>
